<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BB10 theme -->

    <style name="BB10" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:buttonStyleToggle">@style/BB10.Toggle</item>
        <item name="android:buttonStyle">@style/BB10.Button</item>
        <item name="android:listViewStyle">@style/BB10.ListView</item>
        <item name="android:textViewStyle">@style/BB10.TextView</item>
        <item name="android:editTextStyle">@style/BB10.EditText</item>
        <item name="android:spinnerItemStyle">@style/BB10.SpinnerItem</item>
        <item name="android:alertDialogStyle">@style/BB10.AlertDialog</item>
        <item name="android:radioButtonStyle">@style/BB10.Radio</item>
        <item name="android:checkboxStyle">@style/BB10.CheckBox</item>
        <item name="android:seekBarStyle">@style/BB10.SeekBar</item>
        <item name="android:progressBarStyle">@style/BB10.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/BB10.ProgressBar.Small</item>
        <item name="android:progressBarStyleLarge">@style/BB10.ProgressBar.Large</item>
        <item name="android:progressBarStyleHorizontal">@style/BB10.ProgressBar.Horizontal</item>
        <item name="android:spinnerStyle">@style/BB10.Spinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/BB10.DropDownItem</item>
<!-- 	<item name="android:imageButtonStyle">@style/BB10.Button</item> -->

    </style>

    <!-- BB10 widgets -->

    <style name="BB10.Toggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/toogle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="BB10.Button" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BB10.ListView" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="BB10.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#ff00ff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BB10.SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000</item>
    </style>

    <style name="BB10.EditText" parent="android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BB10.AlertDialog">
        <item name="android:fullDark">@drawable/dialog_full</item>
        <item name="android:topDark">@drawable/dialog_top</item>
        <item name="android:centerDark">@drawable/dialog_middle</item>
        <item name="android:bottomDark">@drawable/dialog_bottom</item>
        <item name="android:fullBright">@drawable/dialog_full</item>
        <item name="android:centerBright">@drawable/dialog_middle</item>
        <item name="android:bottomBright">@drawable/dialog_bottom</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom</item>
        <item name="android:centerMedium">@drawable/dialog_middle</item>
    </style>

    <style name="BB10.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_full</item>
    </style>

    <style name="BB10.Radio" parent="android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BB10.CheckBox" parent="android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_checkbox</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BB10.SeekBar" parent="android:Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="BB10.ProgressBar.Horizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="BB10.ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium</item>
        <!-- 
        <item name="android:animationResolution">33</item>
         -->
    </style>

    <style name="BB10.ProgressBar.Small" parent="android:Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small</item>
        <!-- 
        <item name="android:animationResolution">33</item>
         -->
    </style>

    <style name="BB10.ProgressBar.Large" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large</item>
        <!-- 
        <item name="android:animationResolution">33</item>
         -->
    </style>

    <style name="BB10.Spinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownSelector">@drawable/list_selector</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="BB10.DropDownItem" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:textColor">#000</item>
        <item name="android:checkMark">@drawable/btn_radio</item>
    </style>

</resources>